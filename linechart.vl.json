{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/mbas0011/global_nuclear_weapons/main/number-of-nuclear-weapons-tests.csv"
  },
  "vconcat": [
    {
      "title": {
        "text":"Nuclear Weapon Tests (1945 to 2019)",
        "subtitle": "*Select countries for closer observation"
      },
      "width": 550,
      "height": 240,
      "mark": {
        "type": "line",
        "point": true
      },
      "params": [
        {
          "name": "LegendSel",
          "select": {"type": "point", "fields": ["Entity"]},
          "bind": "legend"
        }
      ],
      "encoding": {
        "x": {
          "timeUnit": "year", 
          "field": "Year",
          "axis": {
            "title": "Year", 
            "grid": false, 
            "format": "%Y"},
            "scale": {"domain": {"param": "brush"}
          },
          "title": "Year"
        },
        "y": {
          "aggregate": "sum", 
          "title": "Number of Nuclear Weapon Tests",
          "field": "nuclear_weapons_tests"
        },
        "color": {
          "title": "Country",
          "field":"Entity",
          "type": "nominal"
        },
        "opacity": {
          "condition": {"param": "LegendSel", "value": 1},
          "value": 0.2
        },
        "tooltip": [
          {
            "timeUnit": "year", 
            "field": "Year",
            "title": "Year"
          },
          {
            "field": "Entity", 
            "type": "ordinal",
            "title": "Country"
          },
          {
            "field": "nuclear_weapons_tests", 
            "type": "quantitative",
            "title": "Number of Tests"
          }
        ]
      }
    },
    {
      "title": "Select Pane and Scroll for closer observation",
      "width": 550,
      "height": 60,
      "mark": "area",
      "params": [
        {
          "name": "brush", 
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "encoding": {
        "x": {
          "timeUnit": "year", 
          "field": "Year",
          "axis": {
            "title": "Year", 
            "grid": false, 
            "format": "%Y"
          },
          "title": "Year"
        },
        "y": {
          "aggregate": "sum", 
          "title": "Number of Nuclear Weapon Tests",
          "field": "nuclear_weapons_tests"
        },
        "color": {
          "title": "Country",
          "field":"Entity",
          "type": "nominal"
        },
        "opacity": {
          "condition": {"param": "LegendSel", "value": 1},
          "value": 0.2
        },
        "tooltip": [
          {
            "timeUnit": "year", 
            "field": "Year",
            "title": "Year"
          },
          {
            "field": "Entity", 
            "type": "ordinal",
            "title": "Country"
          },
          {
            "field": "nuclear_weapons_tests", 
            "type": "quantitative",
            "title": "Number of Tests"
          }
        ]
      }
    }
  ]
}